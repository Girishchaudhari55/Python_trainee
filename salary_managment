salaries=[]
def salary_add(salary):
    global salaries
    salaries.append(salary)
def salary_delete(salary):
    global salaries
    try:
        salaries.remove(salary)
    except ValueError as err:
        print('no such salary')
def find_sum():
    global salaries
    s=0
    for salary in salaries
        s +=salary
        return s
def salary_avg():
    global salaries 
    s = sum(salaries)
    count = len(salaries)
    avg = s / count 
    return avg 
def find_max():
    return max(salaries)
def find_min():
    return min(salaries)
def menu():
    choice=int(input('''1-add
2-delete
3-sum
4-avg
5-min
6-max
7-end                       
your choice:'''))
    if(choice==1):
        salary=float (input("enter salary"))
        salary_add(salaries)
    elif choice==2:
        salary_delete(salary)
        print(s)
    elif choice==3:
        salary_sum()
        print(sum)
    elif choice==4:
        salary_avg()
        print(avg)
    elif choice==5:
        salary_min()
        print(min)
    elif choice==6:
        salary_max()
        print(max)
        return choice
def menus():
    choice menu()
    while choice != 7:
        choice = menu()
    print('App Ended')

menus()
    
       
